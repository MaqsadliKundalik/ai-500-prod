# =====================================================
# SENTINEL-RX PRODUCTION ENVIRONMENT VARIABLES
# =====================================================
# Complete configuration for Render.com Pro deployment

# ===========================================
# APPLICATION
# ===========================================
APP_NAME=Sentinel-RX
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=INFO

# ===========================================
# SERVER (Optimized for Pro Plan)
# ===========================================
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false

# ===========================================
# DATABASE (Provided by Render PostgreSQL)
# ===========================================
# DATABASE_URL will be auto-injected by Render
# Format: postgresql+asyncpg://user:pass@host:5432/dbname

# ===========================================
# REDIS (Provided by Render Redis)
# ===========================================
# REDIS_URL will be auto-injected by Render
# Format: redis://host:6379

# ===========================================
# SECURITY (Required - Generate secure values)
# ===========================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# CORS (Update with your frontend domain)
# ===========================================
CORS_ORIGINS=["https://your-frontend-domain.com","https://www.your-frontend-domain.com"]
CORS_ALLOW_CREDENTIALS=true

# ===========================================
# AI/ML SERVICES (Required for full features)
# ===========================================
OPENAI_API_KEY=your-openai-api-key-here
PILL_RECOGNITION_MODEL_PATH=./models/pill_recognition.pt
DRUG_INTERACTION_MODEL_PATH=./models/drug_interaction.pkl
PRICE_ANOMALY_MODEL_PATH=./models/price_anomaly.pkl

# ===========================================
# EXTERNAL APIS (Optional but recommended)
# ===========================================
OPENFDA_API_URL=https://api.fda.gov/drug/
DRUGBANK_API_URL=https://api.drugbank.com/v1/
DRUGBANK_API_KEY=your-drugbank-api-key

# Google Maps for pharmacy location
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Currency exchange rates
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key

# ===========================================
# SMS VERIFICATION (Optional)
# ===========================================
SMS_API_URL=https://your-sms-provider.com/api
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=SentinelRX

# ===========================================
# FILE STORAGE & UPLOADS
# ===========================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=["jpg","jpeg","png","gif","pdf"]
UPLOAD_DIR=./uploads

# ===========================================
# MONITORING & ANALYTICS (Recommended)
# ===========================================
# Sentry for error tracking
SENTRY_DSN=your-sentry-dsn-here

# Prometheus metrics
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# ===========================================
# VOICE ASSISTANT (For multilingual support)
# ===========================================
WHISPER_MODEL_SIZE=base
SUPPORTED_LANGUAGES=["uz","ru","en"]
DEFAULT_LANGUAGE=uz

# ===========================================
# BACKGROUND TASKS (Celery)
# ===========================================
CELERY_BROKER_URL=redis://host:6379/1
CELERY_RESULT_BACKEND=redis://host:6379/2

# ===========================================
# RATE LIMITING (Pro tier supports more)
# ===========================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# ===========================================
# CACHING
# ===========================================
CACHE_TTL_SECONDS=300
ENABLE_CACHE=true

# ===========================================
# EMAIL (Optional - for notifications)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@sentinel-rx.com

# ===========================================
# WEBHOOKS (Optional - for integrations)
# ===========================================
WEBHOOK_SECRET=your-webhook-secret
ENABLE_WEBHOOKS=false
